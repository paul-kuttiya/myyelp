.row.wrapper
  .form-wrap.col-md-4.col-md-offset-2
    %h2 Sign Up for Yelp
    .subhead-wrap
      .subheading Connect with great local busniesses
      = link_to "Log In", login_path
    = bootstrap_form_for(@user) do |f|
      =f.text_field :first_name, hide_label: true, placeholder: "First Name"
      =f.text_field :last_name, hide_label: true, placeholder: "Last Name"
      =f.email_field :email, hide_label: true, placeholder: "Email Address"
      =f.text_field :zip, hide_label: true, placeholder: "Zip Code"
      =f.password_field :password, hide_label: true, placeholder: "Password"
      =f.submit "Sign Up", class: "btn btn-block btn-danger"
  .col-md-4
    %img(src="/images/signup_illustration.png")