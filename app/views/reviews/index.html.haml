.row.listings
  .col-lg-8.col-md-8.col-md-offset-2.col-lg-offset-2
    %ul.reviews
      %h2 Recent Review
      - @reviews.each do |review|
        %li.review-list
          .media
            .media-left.media-top
              = link_to "" do
                %img.media-object(src="/images/profile-placeholder.png")
            .media-body
              %h4.media-heading= (link_to "#{review.user_name}", signup_path) + " wrote a review for " + (link_to "#{review.business_name}", signup_path)
              .user-ratings
                %span
                  - review.rating.times do
                    .btn.btn-stars.btn-md
                      %span.glyphicon.glyphicon-star
                  - (5 - review.rating).times do
                    .btn.btn-stars-grey.btn-md
                      %span.glyphicon.glyphicon-star
